
  <h1>Articles</h1>

  Our blog has <%= Article.public_count %> articles and counting!

  <table class="table table-hover">
    <thead class="table-dark">
      <tr>
        <th>Title</th>
        <th>Creator</th>
        <th colspan="2"></th> <!-- Changed colspan from 3 to 2 -->
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <% unless article.archived? %>
          <tr>
            <td><%= article.title %></td>
            <td><%= article.user.email %></td>
            <td><%= link_to 'Show', article, class:"btn btn-outline-primary"%></td>
           
              <td><%= link_to 'Edit', edit_article_path(article),class:"btn btn-outline-secondary"%></" %></td> <!-- Corrected indentation -->
     <td>         <%= link_to "Destroy", article_path(article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  },class:"btn btn-outline-primary" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>


